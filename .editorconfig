# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Lua scripts
[*.lua]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

# AsciiDoc files
[*.asc]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2

# XML/FODT files
[*.{xml,fodt,odt}]
indent_style = space
indent_size = 2

# Configuration files
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2
